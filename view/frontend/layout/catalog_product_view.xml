<?xml version="1.0"?>

<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    
    <body>
        <referenceContainer name='root'>
            <block
                class='Develo\Designer\Block\InitProducView'
                name='Develo_Designer_Block_InitProducView'
                ifconfig='develo_productdesigner/general/enable'
            />
        </referenceContainer>
        <referenceBlock name="product.info.addtocart">
            <block 
                class="Develo\Designer\Block\Product\View" 
                name="product.info.designer" 
                template="Develo_Designer::product/view.phtml" 
                after="-"
            />
        </referenceBlock>
        <!-- for config products -->
        <referenceBlock name="product.info.addtocart.additional">
            <block 
                class="Develo\Designer\Block\Product\View" 
                name="product.info.designer.configurable" 
                template="Develo_Designer::product/view.phtml" 
                after="-"
            />
        </referenceBlock>
    </body>

</page>

